)

type CardImageProps struct {
	ID         string
	Class      templ.CSSClasses
	Attributes templ.Attributes

	Aspect CardImageAspect

	Src templ.SafeURL
	Alt string
}

templ CardImage(props CardImageProps) {
	<img
		id={ props.ID }
		class={ css.CardImage, string(props.Aspect), props.Class }
		src={ props.Src }
		alt={ props.Alt }
		{ props.Attributes... }
	/>
}

