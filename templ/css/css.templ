templ globalInputStyles() {
	<style>
		/* Text Inputs Base */
		input:not([type]),
		input[type=""],
		input[type="text"],
		input[type="email"],
		input[type="password"],
		input[type="tel"],
		input[type="url"],
		input[type="search"],
		input[type="number"],
		input[type="date"],
		input[type="time"],
		input[type="datetime-local"],
		input[type="month"],
		input[type="week"],
		textarea {
			/* Layout */
			display: inline-block;
			padding: var(--ui-spacing) calc(var(--ui-spacing) * 2);

			/* Appearance */
			background-color: transparent;
			color: var(--ui-text-input);
			border: var(--ui-border-width) solid var(--ui-border-color);
			border-radius: var(--ui-radius);
			box-shadow: var(--ui-shadow-inner);

			/* Typography */
			font-size: 1rem; /* Prevents iOS zoom */

			/* Interaction */
			accent-color: var(--ui-primary);
			transition:
				border-color 0.25s ease-in-out,
				box-shadow 0.25s ease-in-out;
		}

		/* Hover & Focus States */
		input:not([type]):hover,
		input[type=""]:hover,
		input[type="text"]:hover,
		input[type="email"]:hover,
		input[type="password"]:hover,
		input[type="tel"]:hover,
		input[type="url"]:hover,
		input[type="search"]:hover,
		input[type="number"]:hover,
		input[type="date"]:hover,
		input[type="time"]:hover,
		input[type="datetime-local"]:hover,
		input[type="month"]:hover,
		input[type="week"]:hover,
		textarea:hover {
			border-color: var(--ui-primary);
			box-shadow: var(--ui-shadow-sm);
		}

		input:not([type]):focus,
		input[type=""]:focus,
		input[type="text"]:focus,
		input[type="email"]:focus,
		input[type="password"]:focus,
		input[type="tel"]:focus,
		input[type="url"]:focus,
		input[type="search"]:focus,
		input[type="number"]:focus,
		input[type="date"]:focus,
		input[type="time"]:focus,
		input[type="datetime-local"]:focus,
		input[type="month"]:focus,
		input[type="week"]:focus,
		textarea:focus {
			outline: none;
			border-color: var(--ui-primary);
			box-shadow:
				var(--ui-shadow-sm),
				0 0 0 3px hsla(var(--ui-hue), 85%, 55%, 0.3);
		}

		input:not([type]):focus-visible,
		input[type=""]:focus-visible,
		input[type="text"]:focus-visible,
		input[type="email"]:focus-visible,
		input[type="password"]:focus-visible,
		input[type="tel"]:focus-visible,
		input[type="url"]:focus-visible,
		input[type="search"]:focus-visible,
		input[type="number"]:focus-visible,
		input[type="date"]:focus-visible,
		input[type="time"]:focus-visible,
		input[type="datetime-local"]:focus-visible,
		input[type="month"]:focus-visible,
		input[type="week"]:focus-visible,
		textarea:focus-visible {
			outline: none;
			box-shadow:
				var(--ui-shadow-sm),
				0 0 0 3px var(--ui-primary);
		}

		/* Textarea specific */
		textarea {
			min-height: calc(var(--ui-spacing) * 8);
			resize: vertical;
		}

		/* Number input - remove spinners */
		input[type="number"]::-webkit-inner-spin-button,
		input[type="number"]::-webkit-outer-spin-button {
			-webkit-appearance: none;
			margin: 0;
		}

		input[type="number"] {
			-moz-appearance: textfield;
		}

		/* Checkbox & Radio */
		input[type="checkbox"],
		input[type="radio"] {
			cursor: pointer;
			accent-color: var(--ui-primary);
		}

		input[type="checkbox"] {
			display: inline-block;
			height: 1.5rem;
			width: 1.5rem;
		}

		/* Range input - Safari zoom prevention */
		input[type="range"] {
			font-size: 1rem; /* Prevents iOS zoom */
		}

		/* Color picker */
		input[type="color"] {
			cursor: pointer;
			height: calc(var(--ui-spacing) * 2 + 2rem);
			padding: var(--ui-spacing);
			border: var(--ui-border-width) solid var(--ui-border-color);
			border-radius: var(--ui-radius);
			background-color: transparent;
		}

		/* File upload */
		input[type="file"] {
			padding: var(--ui-spacing);
			font-size: 1rem;
		}

		/* Readonly States */
		input[readonly],
		textarea[readonly] {
			/* Visual distinction */
			opacity: 0.7;
			background-color: var(--ui-muted, rgba(128, 128, 128, 0.05));
			cursor: not-allowed;
			user-select: none;

			/* Keep border subtle */
			border-color: var(--ui-border-color) !important;
		}

		/* Disable all hover effects for readonly */
		input[readonly]:hover,
		textarea[readonly]:hover {
			border-color: var(--ui-border-color) !important;
		}

		/* Disable all focus effects for readonly */
		input[readonly]:focus,
		textarea[readonly]:focus,
		input[readonly]:focus-visible,
		textarea[readonly]:focus-visible {
			outline: none !important;
			border-color: var(--ui-border-color) !important;
			box-shadow: var(--ui-shadow-inner) !important;
		}

		/* Disabled States */
		input:disabled,
		textarea:disabled,
		select:disabled {
			/* Stronger visual distinction than readonly */
			opacity: 0.5;
			background-color: var(--ui-muted, rgba(128, 128, 128, 0.1));
			cursor: not-allowed;
			user-select: none;

			/* Remove all borders and effects */
			border-style: dashed;
			border-color: var(--ui-border-color) !important;
		}

		/* Disable all hover effects for disabled */
		input:disabled:hover,
		textarea:disabled:hover,
		select:disabled:hover {
			border-color: var(--ui-border-color) !important;
		}

		/* Disable all focus effects for disabled */
		input:disabled:focus,
		textarea:disabled:focus,
		select:disabled:focus,
		input:disabled:focus-visible,
		textarea:disabled:focus-visible,
		select:disabled:focus-visible {
			outline: none !important;
			border-color: var(--ui-border-color) !important;
			box-shadow: none !important;
		}

		/* Readonly checkbox and radio */
		input[type="checkbox"][readonly],
		input[type="radio"][readonly] {
			pointer-events: none;
			opacity: 0.7;
		}

		/* Disabled checkbox and radio */
		input[type="checkbox"]:disabled,
		input[type="radio"]:disabled {
			cursor: not-allowed;
			opacity: 0.5;
		}

		/* Readonly color picker */
		input[type="color"][readonly] {
			pointer-events: none;
			opacity: 0.7;
		}

		/* Disabled color picker */
		input[type="color"]:disabled {
			cursor: not-allowed;
			opacity: 0.5;
		}

		/* Readonly file input */
		input[type="file"][readonly] {
			pointer-events: none;
			opacity: 0.7;
		}

		/* Disabled file input */
		input[type="file"]:disabled {
			cursor: not-allowed;
			opacity: 0.5;
		}

		/* Validation States */
		input[aria-invalid="true"],
		textarea[aria-invalid="true"],
		select[aria-invalid="true"] {
			border-color: var(--ui-destructive) !important;
		}

		input[aria-invalid="false"],
		textarea[aria-invalid="false"],
		select[aria-invalid="false"] {
			border-color: var(--ui-success) !important;
		}

		/* Color Variants - Using CSS Custom Properties */
		input.primary,
		textarea.primary {
			--input-color: var(--ui-primary);
			--input-hover: var(--ui-primary-hover);
			border-color: var(--input-color);
			accent-color: var(--input-color);
		}

		input.secondary,
		textarea.secondary {
			--input-color: var(--ui-secondary);
			--input-hover: var(--ui-secondary-hover);
			border-color: var(--input-color);
			accent-color: var(--input-color);
		}

		input.success,
