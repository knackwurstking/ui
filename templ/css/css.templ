			--input-color: var(--ui-warning);
			--input-hover: var(--ui-warning-hover);
			border-color: var(--input-color);
			accent-color: var(--input-color);
		}

		input.destructive,
		textarea.destructive {
			--input-color: var(--ui-destructive);
			--input-hover: var(--ui-destructive-hover);
			border-color: var(--input-color);
			accent-color: var(--input-color);
		}

		input.info,
		textarea.info {
			--input-color: var(--ui-info);
			--input-hover: var(--ui-info-hover);
			border-color: var(--input-color);
			accent-color: var(--input-color);
