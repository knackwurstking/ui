templ StylesReset() {
	<style>
		/* Box sizing rules */
		*,
		*::before,
		*::after {
			position: relative;
			box-sizing: inherit;
			margin: 0;
			padding: 0;
		}

		/* Set core root defaults */
		html {
			box-sizing: border-box;
			-webkit-tap-highlight-color: transparent;
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
		}

		/* Make images easier to work with */
		img,
		picture,
		video,
		canvas,
		svg {
			display: block;
			max-width: 100%;
			height: auto;
		}

		/* Inherit fonts for form controls */
		input,
		button,
		textarea,
		select {
			font: inherit;
		}

		/* Avoid text overflows */
		p,
		h1,
		h2,
		h3,
		h4,
		h5,
		h6 {
			overflow-wrap: break-word;
		}

		/* Remove list styles on ul, ol elements with a list role */
		ul[role="list"],
		ol[role="list"] {
			list-style: none;
		}

		/* Remove default button styles */
		button {
			background: none;
			border: none;
			cursor: pointer;
		}

		/* Remove default link styles */
		a {
			color: inherit;
			text-decoration: none;
		}

		/* Set cursor on clickable elements */
		button,
		[role="button"],
		input[type="submit"],
		input[type="button"],
		label[for],
		select,
		summary,
		[tabindex]:not([tabindex="-1"]) {
			cursor: pointer;
		}

		/* Disable cursor on disabled elements */
		[disabled],
		[aria-disabled="true"] {
			cursor: not-allowed;
		}
	</style>
}
