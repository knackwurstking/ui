{
    "name": "ui",
    "version": "2.0.0",
    "description": "Just an ui lib for my projects.",
    "type": "module",
    "main": "lib/index.ts",
    "module": "dist/ui.min.js",
    "repository": "knackwurstking/ui",
    "scripts": {
        "dev": "vite --host",
        "build": "tsc && vite build --minify -c vite.config.js && npm run build-css && npm run build-fonts",
        "build-css": "rm -rf dist/css && sass sass/:dist/css/",
        "build-fonts": "cp -r fonts dist/",
        "build-docs": "wca analyze lib --outDir docs/lit/"
    },
    "license": "MIT",
    "peerDependencies": {
        "lit": "^3.2.1"
    },
    "devDependencies": {
        "@types/node": "^22.7.5",
        "clean-css-cli": "^5.6.3",
        "typedoc": "^0.26.10",
        "typescript": "^5.6.3",
        "web-component-analyzer": "^2.0.0"
    },
    "dependencies": {
        "lit": "^3.2.1",
        "sass": "^1.82.0",
        "vite": "^5.2.11"
    }
}
