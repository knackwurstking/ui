{
    "name": "ui",
    "version": "0.2.0",
    "description": "Just an ui lib for my projects.",
    "type": "module",
    "main": "src/index.js",
    "style": "css/main.css",
    "types": "src/index.d.ts",
    "files": [
        "LICENSE",
        "src",
        "dist",
        "svg"
    ],
    "repository": "knackwurstking/ui",
    "scripts": {
        "build": "npm run build:types && npm run build:lib && npm run build:css",
        "build:lib": "vite build --minify -c vite.config.js",
        "build:css": "cleancss -o dist/main.min.css css/main.css",
        "build:types": "npm run _build:types:rm && npx -p typescript tsc src/*.js src/**/*.js  --emitDeclarationOnly --declaration --allowJs",
        "_build:types:rm": "find src | grep -e \".d.ts$\" | xargs rm"
    },
    "license": "MIT",
    "devDependencies": {
        "clean-css-cli": "^5.6.3"
    },
    "dependencies": {
        "vite": "^5.2.9"
    }
}
