package components

import "github.com/knackwurstking/ui/pkg/css"

type ContainerProps struct {
	ID         string
	Class      templ.CSSClasses
	Attributes templ.Attributes

	Fluid bool
}

templ Container(props *ContainerProps) {
	{{
		if props == nil {
			props = &ContainerProps{}
		}
	}}
	<span
		id={ props.ID }
		class={ css.Container, templ.KV(css.ContainerFluid, props.Fluid), props.Class }
		{ props.Attributes... }
	>
		{ children... }
	</span>
}
