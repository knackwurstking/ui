package app

import (
	"github.com/knackwurstking/ui/pkg/components"
	"github.com/knackwurstking/ui/pkg/css"
)

const (
	IDButtons                 = "section-buttons"
	IDButtonsDefault          = "section-default-buttons"
	IDButtonsOutlineVariant   = "section-outline-button-variant"
	IDButtonsGhostVariant     = "section-ghost-button-variant"
	IDButtonsFullWidth        = "section-buttons-full-width"
	IDButtonsSizes            = "section-button-sizes"
	IDButtonsIcon             = "section-icon-buttons"
	IDButtonsLoading          = "section-buttons-loading"
	IDButtonsLink             = "section-buttons-link"
	IDButtonsCombinedExamples = "section-buttons-combined-examples"
)

templ Buttons() {
	<section id={ IDButtons } class={ css.P, css.MT }>
		@SectionTitle() {
			Buttons
		}
		@SectionContent() {
			@buttonsDefault()
			@buttonsOutlineVariants()
			@buttonsGhostVariants()
			@buttonsFullWidth()
			@buttonsSizes()
			@buttonsIcon()
			@buttonsLoading()
			@buttonsLink()
			@buttonsCombined()
		}
	</section>
}

templ buttonsDefault() {
	<div class={ css.MB }>
		<h3 id={ IDButtonsDefault } class={ css.MB }>Default Buttons</h3>
		<div class={ css.Flex, css.FlexRow, css.FlexWrap, css.Gap }>
			@components.Button(nil) {
				Default
			}
			@components.Button(&components.ButtonProps{
				Color: components.ButtonColorSecondary,
			}) {
				Secondary
			}
			@components.Button(&components.ButtonProps{
				Color: components.ButtonColorSuccess,
			}) {
				Success
			}
			@components.Button(&components.ButtonProps{
				Color: components.ButtonColorWarning,
			}) {
				Warning
			}
			@components.Button(&components.ButtonProps{
				Color: components.ButtonColorDestructive,
			}) {
				Destructive
			}
			@components.Button(&components.ButtonProps{
				Color: components.ButtonColorInfo,
			}) {
				Info
			}
			@components.Button(&components.ButtonProps{
				Color: components.ButtonColorContrast,
			}) {
				Contrast
			}
			@components.Button(&components.ButtonProps{
				Color: components.ButtonColorMuted,
			}) {
				Muted
			}
		</div>
	</div>
}

