const (
	IDAppDrawer      = "app-drawer"
	IDAppDrawerItems = "app-drawer-items"
)

templ Drawer() {
	@components.Drawer(&components.DrawerProps{
		Props:  components.NewProps(templ.KV("id", IDAppDrawer)),
		ZIndex: 50,
	}) {
		<ul style={ "padding-bottom: 2.5rem" } id={ IDAppDrawerItems } class={ css.Flex, css.FlexCol, css.GapSm }>
			@drawerItemsText()
			@drawerItemsButtons()
			@drawerItemsForms()
			@drawerItemsCards()
			@drawerItemsBadges()
			@drawerItemsDialogs()
			@drawerItemsTabs()
			@drawerItemsSwitches()
		</ul>
	}
}

