templ drawerItem(href templ.SafeURL, onclick templ.ComponentScript) {
	<li class={ css.P0 }>
		<a
			class={ css.P, css.PXLg, css.Contrast, css.Ghost, css.NoUnderline }
			href={ href }
			onclick={ onclick }
		>
			{ children... }
		</a>
	</li>
}

templ drawerSubItem(href templ.SafeURL, onclick templ.ComponentScript) {
	<li class={ css.P0 }>
		<a
			style={ "margin-left: 1.5rem" }
			class={ css.P, css.PXLg, css.Contrast, css.Ghost, css.NoUnderline, css.Flex, css.Gap }
			href={ href }
			onclick={ onclick }
		>
			<i class="bi bi-dot"></i>
			{ children... }
		</a>
	</li>
}
